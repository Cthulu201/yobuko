# Maintainer: Cthulu201 <cthulu201@duck.com>

_pkgname=gpiozero
pkgname="python-${_pkgname}"
pkgver=1.6.2
pkgrel=2
pkgdesc='A simple interface to GPIO devices with Raspberry Pi'
arch=('any')
url="https://github.com/${_pkgname}/${_pkgname}"
license=('BSD')
depends=('python-colorzero' 'python-setuptools')
optdepends=('python-spidev:         for SPI access'
            'python-raspberry-gpio: for pin access via raspberry-gpio-python library')
source=("${_pkgname}-${pkgver}.tar.gz::https://github.com/${_pkgname}/${_pkgname}/archive/v${pkgver}.tar.gz")
sha512sums=('ddb9e64425241cd2ea67d2261c440fd6482d9dd4a3242b16e5ceaba7336964e15b22e1a31466d800afda584859c90744b895be30790b80575784725f3b8b7837')


build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python setup.py build
}

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python setup.py install --root="${pkgdir}/" -O1 --skip-build
  install -Dm644 LICENSE.rst -t "${pkgdir}/usr/share/licenses/${pkgname}"
}
