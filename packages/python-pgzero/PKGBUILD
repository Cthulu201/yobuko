# Maintainer: Cthulu201 <cthulu201@duck.com>

_pkgname='pgzero'
pkgname="python-${_pkgname}"
pkgver=1.2.1
pkgrel=3
pkgdesc="A zero-boilerplate 2D games framework"
arch=('any')
url="http://pypi.python.org/pypi/pgzero"
license=('GPL')
depends=('python-numpy' 'python-pygame')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/${_pkgname}/${_pkgname}-${pkgver}.tar.gz")
sha512sums=('d78219f266651a6d0c18a4630b982f1462707fd312494aa7286580be2bf3bdbc3a6beec00a460af38d5ce5ea147e81752d6be7a4618772398712d9dbbbd2b506')

build() {
    cd "${srcdir}/${_pkgname}-${pkgver}"
    python setup.py build
}

package() {
    cd "${srcdir}/${_pkgname}-${pkgver}"
    python setup.py install --root="${pkgdir}" -O1 --skip-build
}
