# Maintainer: Cthulu201 <cthulu201@duck.com>

pkgname="clion"
pkgver=2023.1.1
pkgrel=1
pkgdesc="A cross-platform IDE for C and C++"
arch=('x86_64')
url="http://www.jetbrains.com/${_pkgname}"
license=('custom')
groups=('yobuko')
depends=('python')
source=("https://download.jetbrains.com/cpp/CLion-${pkgver}.tar.gz")
sha512sums=('32fd59bcdd51955c3788ce3d4a7f3fb15271e2c708ba8ba1885dc0e422269a679794e23c3258af28ef5da126cf38cafbcee166b3ea0d168c076ab45d23a4cbbc')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}/lib/pty4j/linux/" || exit
  find . -maxdepth 1 -not -path . -type d -not -name 'x86-64' -exec rm -rf {} \;
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}" || exit
  # Install directorie(s)
  install -dm0755 "${pkgdir}/usr/share/licenses/${pkgname}/"
  install -dm0755 "${pkgdir}/opt/${pkgname}"
  install -dm0755 "${pkgdir}/usr/bin/"

  # Install license(s)
  mv "license/"* "${pkgdir}/usr/share/licenses/${pkgname}/"
  rmdir "license"

  # Setup executable(s)
  cp -a ./* "${pkgdir}/opt/${pkgname}/"
  ln -s "/opt/${pkgname}/bin/${pkgname}.sh" "${pkgdir}/usr/bin/${pkgname}"
}
