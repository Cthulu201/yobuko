# Maintainer: Cthulu201 <cthulu201@duck.com>

pkgname="clion"
pkgver=2023.2.1
pkgrel=1
pkgdesc="A cross-platform IDE for C and C++"
arch=('x86_64')
url="http://www.jetbrains.com/${_pkgname}"
license=('custom')
groups=('yobuko')
depends=('python')
options=(!strip)
source=("https://download.jetbrains.com/cpp/CLion-${pkgver}.tar.gz")
sha512sums=('f599ebd7a92b3e03a6eb47ea1706eae291ac9d12ebfcf8a2527106c20bc501c793d2407c51b0fa48cb43fb0ce1836bafb6b476492750a338e3c2f334fdfcc6a7')

package() {
  cd "${srcdir}/${pkgname}-${pkgver}" || exit

  install -dm0755 "${pkgdir}/usr/bin/"
  install -dm0755 "${pkgdir}/opt/${pkgname}"
  install -dm0755 "${pkgdir}/usr/share/licenses/${pkgname}/"

  cp -a ./* "${pkgdir}/opt/${pkgname}/"
  cp -a "license/"* "${pkgdir}/usr/share/licenses/${pkgname}/"
  ln -s "/opt/${pkgname}/bin/${pkgname}.sh" "${pkgdir}/usr/bin/${pkgname}"
}
