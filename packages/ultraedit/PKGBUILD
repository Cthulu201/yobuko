pkgbase="ultraedit"
pkgname=("uex" "ucx")
pkgver=21.00.0.0
_pkgver=21.00.0.18
pkgrel=1
pkgdesc="flexible, powerful, and secure text editor"
arch=('x86_64')
url="http://www.ultraedit.com/products/uex.html"
license=('custom')
depends=('desktop-file-utils' 'webkit2gtk' 'libjpeg' 'libjpeg6' 'libpng' 'libsm')
source=("https://downloads.ultraedit.com/main/uc/linux/tar/ucx-${_pkgver}_amd64.tar.gz"
        "https://downloads.ultraedit.com/main/ue/linux/tar/uex_${pkgver}_amd64.tar.gz")
sha512sums=('1e59192b96daafa35d9affeaae354d64030233451973a6cdb7a0a049c89bd7656b897f8c40ffa4300a32080ef196f705f883e336ce35bc48a94fac0a06bb6865'
            'caeb9e2d8b6a3e79d023e1eb9fce4356db90be1757dd71672cb3e503dacb9e7dbd4bab154628fc79cf6dc41e8047c32f4523303a644161889622bef8cf57b710')
DLAGENTS=('https::/usr/bin/curl -fLC - --user-agent Lynx --retry 3 --retry-delay 3 -o %o %u')

package_uex() {
  install -d "${pkgdir}/opt" "${pkgdir}/usr/bin" "${pkgdir}/usr/share/pixmaps" "${pkgdir}/usr/share/applications" "${pkgdir}/usr/share/licenses/${pkgname}"

  cp -R "${srcdir}/uex" "${pkgdir}/opt"
  ln -s "/opt/uex/bin/uex" "${pkgdir}/usr/bin/uex"
  ln -s "/opt/uex/share/uex/ue.png" "${pkgdir}/usr/share/pixmaps/ue.png"
  ln -s "/opt/uex/share/uex/uex.desktop" "${pkgdir}/usr/share/applications/uex.desktop"
  ln -s "/opt/uex/share/doc/uex/copyright" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

package_ucx() {
  echo "UltraCompare package"
}
