# Maintainer: Cthulu201 <cthulu201@duck.com>

_pkgname=colorzero
pkgname="python-${_pkgname}"
pkgver=2.0
pkgrel=2
pkgdesc="A color manipulation library for Python"
arch=('any')
url="https://${_pkgname}.readthedocs.org/"
license=('BSD')
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_pkgname::1}/${_pkgname}/${_pkgname}-${pkgver}.tar.gz")
sha512sums=('498fa476395a937f58b3f702880266f8a1cf90f0e7bb80aea18bfdf130d79ecc06657b3431c7624fe90c05dffc6bac388037152ec585382473299344421fb4cc')


build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python setup.py build
}

package_python-colorzero() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python setup.py install --root="${pkgdir}" --skip-build -O1
  install -Dm644 LICENSE.txt -t "${pkgdir}/usr/share/licenses/${pkgname}"
}
